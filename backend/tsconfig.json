{
  "compilerOptions": {
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,

    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "allowJs": true,
    // "checkJs": true,
    
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/static"],
  "lib": ["es6"]
}